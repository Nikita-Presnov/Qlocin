{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean all binaries",
            "detail": "Remove all build folder.",
            "type": "shell",
            "command": "rm -r -f build/",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug .. && make -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/build_debug"
            }
        },
        {
            "type": "cmake",
            "label": "cmakeDebugType",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "build",
            "problemMatcher":"$gcc",
            "options": {
                "cwd": "${workspaceFolder}/build_debug"
            }
        },
        {
            "type": "cmake",
            "label": "cmakeReleaseType",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "build",
            "problemMatcher":"$gcc",
            "options": {
                "cwd": "${workspaceFolder}/build_release"
            }
            
        }
    ]
}